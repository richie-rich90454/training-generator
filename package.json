{
  "name": "training-generator",
  "version": "1.1.1",
  "main": "src/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "vite & cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "test": "node test_language_prompts.js && node test-app.js && node test-complete.js",
    "test:unit": "jest"
  },
  "keywords": [
    "electron",
    "ollama",
    "ai",
    "training",
    "llm",
    "fine-tuning"
  ],
  "author": "richie-rich90454",
  "license": "MIT",
  "description": "Desktop application to convert documents into AI training data using Ollama",
  "build": {
    "appId": "com.training.generator",
    "productName": "Training Generator",
    "copyright": "Copyright Â© 2026 richie-rich90454",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "native-splash/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/.{git,hg,svn}",
      "!**/{.DS_Store,.git,.hg,.svn,__pycache__,thumbs.db,.gitignore,.idea,.vscode}",
      "!**/*.{iml,o,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/._*",
      "!**/*.log",
      "!**/test*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "native-splash",
        "to": "native-splash"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "native-splash/**",
      "**/pdf-parse/**/*",
      "**/officeparser/**/*",
      "**/mammoth/**/*",
      "**/rtf-parser-fixes/**/*"
    ],
    "win": {
      "icon": "assets/favicon.ico",
      "requestedExecutionLevel": "asInvoker",
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        },
        {
          "target": "portable",
          "arch": "x64"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Training Generator",
      "installerIcon": "assets/favicon.ico",
      "uninstallerIcon": "assets/favicon.ico",
      "installerHeaderIcon": "assets/favicon.ico",
      "license": "LICENSE"
    },
    "mac": {
      "icon": "assets/icon.png",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "zip",
          "arch": "arm64"
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "maintainer": "richie-rich90454 <noreply@github.com>",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ]
    }
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "glob": "^13.0.0",
    "jest": "^30.2.0",
    "node-fetch": "^2.7.0",
    "terser": "^5.44.1",
    "vite": "^7.3.0",
    "vite-plugin-copy": "^0.1.6"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "html-to-text": "^9.0.5",
    "mammoth": "^1.11.0",
    "officeparser": "^3.0.0",
    "pdf-parse": "^1.1.4",
    "rtf-parser-fixes": "^1.3.4"
  }
}